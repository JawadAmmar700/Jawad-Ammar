generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

type DataSlide {
  folder       String
  imagesLength String
}

type DataTechnology {
  color String
  name  String
  src   String
}

type SkillsSkills {
  name String
  src  String
}

model Data {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  description String
  name        String
  ref         String
  repo        String
  site        String
  slide       DataSlide
  span        String
  src         String
  technology  DataTechnology[]
  youtube     String
}

model Skills {
  id     String         @id @default(auto()) @map("_id") @db.ObjectId
  ref    String
  skills SkillsSkills[]
  title  String
}
