// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comment   String
  username  String
  image     String
  Replies   Reply[]
}

model Data {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  link        String
  name        String
  site        String
  span        Int
  src         String
  technology  String
  videoUrl    String
}

model Reply {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  reliedComment String
  repliedUser   String
  image         String
  commentId     String
  comment       Comment  @relation(fields: [commentId], references: [id])
}

model Skills {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lng       String
  percent   String
  subSkill  String[]
}
