generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type DataSlide {
  folder       String
  imagesLength String
}

type DataTechnology {
  color String
  name  String
}

type SkillsSubSkill {
  lng     String
  percent String
}

model Data {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  description String
  name        String
  repo        String
  site        String
  slide       DataSlide
  span        String
  src         String
  technology  DataTechnology[]
  youtube     String
}

model Skills {
  id       String           @id @default(auto()) @map("_id") @db.ObjectId
  lng      String
  percent  String
  subSkill SkillsSubSkill[]
}
